			img.story-image(src= image)
			.story-date
				span.story-date-number 15
				span.story-date-text Jan
		h3.story-title Lorem ipsum dolor sit amet
		.story-desc 
			p.story-desc-text Lorem ipsum dolor, sit amet consectetur adipisicing elit. Quibusdam delectus ea vel aspernatur quisquam 
		.story-meta 
			.story-meta-item 
				i.fa.fa-eye.story-meta-icon 
